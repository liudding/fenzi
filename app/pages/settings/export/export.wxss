/* pages/me/export/export.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;

  padding: 16px;
  box-sizing: border-box;

  overflow: hidden;
}

.content {
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;

  height: calc(100vh - 150px - env(safe-area-inset-bottom, 0));
  
  padding: 16px;
  border-radius: 16px;

  background: #efefefaa;
}

.footer {
  margin-top: 24px;
  padding: 24px;
  width: 100%;

  padding-bottom: env(safe-area-inset-bottom);
}