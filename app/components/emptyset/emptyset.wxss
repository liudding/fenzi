@import '/vendor/iconfont/iconfont.wxss';

.emptyset {
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  top: 40%;
  transform: translateY(-50%);
  width: 100%;

  box-sizing: border-box;
}

.emptyset__title {
  color: #999;
  font-size: 14px;
}

.emptyset__info {
  color: #aaa;
  font-size: 12px;
  margin-top: 5px;
}

.emptyset_icon {
  width: 100rpx;
  height: 100rpx;
  font-size: 100rpx;
  line-height: 100rpx;
  text-align: center;
  margin-bottom: 16px;
  color: #ccc;
}

.emptyset_img {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 16px;
}

.emptyset__light {
  color: #fff;
}

.emptyset__light .emptyset__title {
  color: #fff;
}

.emptyset__light .emptyset__info {
  color: #aaa;
}