/* pages/dashboard/dashboard.wxss */
.container {
    height: 100%;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  

.summary {
    display:flex;
    flex-direction:row;
    justify-content: space-evenly;
}

.pie-chart-canvas {
    height: 150px;
    width: 150px;
}


.summary__detail {
    width: 150px;

    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: space-around;

    font-size: 14px;
}


.brief-infos {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-evenly;
}


.brief-item {
    width: 80px;
    height: 80px;
    /* background: red; */

    display: flex;
    flex-direction: column;
    align-items: center;
}


.brief-item__text {
    height: 50px;
    font-size: 20px;
    color: #2b2b2b;

    line-height: 60px;
}

.brief-item__title {
    font-size: 12px;
    color: gray;
}



