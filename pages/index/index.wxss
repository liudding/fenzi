.navi-title {
  color: #2b2b2b;
  border-bottom: 1px solid #00b9f1;
}

.container {
  height: 100%;
  box-sizing: border-box;
}

.header {
  height: 80px;
  width: 100%;
  box-sizing: border-box;
  padding: 0 16px;
  /* background: rgb(250, 250, 250); */

  display: flex;
  flex-direction: row;

  align-items: center;
  justify-content: space-between;
}

.total {
  font-size: 40px;
  color: #b2b2b2;
  line-height: 40px;
}



.new-btn {
  width: 40px;
  height: 40px;
  border-radius: 40px;
  background: #00b9f1;

  text-align: center;
  line-height: 40px;
  color: white;

  box-shadow: 1px 1px 5px rgba(0, 0,0, 0.3);
}
